[Unit]
Description=Waves Node
After=network.target

[Service]
User=waves
Group=waves

Type=simple
ExecStart=/usr/bin/java -jar /opt/waves/{{ waves_file }} /opt/waves/{{ waves_conf_file }}

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=10s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
